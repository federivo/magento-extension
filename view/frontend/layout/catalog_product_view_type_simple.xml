<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="product.info.form.content">
            <block class="Magento\Catalog\Block\Product\View"
                   name="product.info.form.warranty"
                   template="Extend_Warranty::product/view/warranty.phtml"
                   before="product.info.addtocart">
                <arguments>
                    <argument name="viewModel" xsi:type="object">Extend\Warranty\ViewModel\Installation</argument>
                    <argument name="ajaxSuiteViewModel" xsi:type="object">Extend\Warranty\ViewModel\AjaxSuite</argument>
                </arguments>
            </block>
        </referenceContainer>
        <referenceContainer name="product.info.options.wrapper.bottom">
            <block class="Magento\Catalog\Block\Product\View"
                   name="product.info.options.wrapper.warranty"
                   template="Extend_Warranty::product/view/warranty.phtml"
                   before="-">
                <arguments>
                    <argument name="viewModel" xsi:type="object">Extend\Warranty\ViewModel\Installation</argument>
                    <argument name="ajaxSuiteViewModel" xsi:type="object">Extend\Warranty\ViewModel\AjaxSuite</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
