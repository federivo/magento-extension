        </arguments>
    </virtualType>

    <virtualType name="Extend\Warranty\Block\System\Config\SyncButton" type="Extend\Warranty\Block\System\Config\Button">
        <arguments>
            <argument name="id" xsi:type="string">syncButton</argument>
