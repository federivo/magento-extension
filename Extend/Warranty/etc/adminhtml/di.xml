    <virtualType name="Extend\Warranty\Block\System\Config\AccountButton" type="Extend\Warranty\Block\System\Config\Button">
        <arguments>
            <argument name="id" xsi:type="string">accountButton</argument>
            <argument name="label" xsi:type="string">Set up my Extend account</argument>
        </arguments>
    </virtualType>

    <virtualType name="Extend\Warranty\Block\System\Config\PortalButton" type="Extend\Warranty\Block\System\Config\Button">
